<Page x:Class="McPlat.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:McPlat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Current Monthly Pay" HorizontalAlignment="Center" FontSize="30"/>
            <TextBlock Text="{Binding currentMonthPay}" HorizontalAlignment="Center" FontSize="30"/>
        </StackPanel>
    </Grid>
</Page>
